{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Percentage of Australians who Exercise at least 3 times a week",
    "projection": {
      "type": "mercator"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/hmat0015/FIT3179_Homework_9/refs/heads/main/australia_states.json",
          "format": {
            "type": "topojson",
            "feature": "georef-australia-state-millesime" 
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 1
        },
        "encoding": {
          "color": {
            "field": "Participation rate",
            "type": "quantitative",
            "scale": {
              "scheme": "blues"
            },
            "legend": {
              "title": "Percentage of population (%)"
            }
          },
          "tooltip": [
            {"field": "properties.ste_iso3166", "type": "nominal", "title": "State"},
            {"field": "Participation rate", "type": "quantitative", "title": "Percentage of population"}
          ]
        },
        "transform": [
          {
            "lookup": "properties.ste_iso3166",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/hmat0015/FIT3179_Homework_9/refs/heads/main/state_activity_participation.csv",
                "format": {"type": "csv"}
              },
              "key": "State",
              "fields": ["Participation rate"]
            }
          }
        ]
      }
    ]
}