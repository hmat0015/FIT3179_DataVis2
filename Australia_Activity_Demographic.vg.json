{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Participation Rates in Physical Activities by Age Group",
    "fontSize": 24
  },
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/hmat0015/FIT3179_Test_DV2/refs/heads/main/Australia_Participation_Demographic.csv"
  },
  "mark": {
    "type": "bar",
    "stroke": "black",
    "strokeWidth": 0.05
  },
  "encoding": {
    "x": {
        "field": "State (Age)",
        "type": "nominal",
        "axis": {
          "labelAngle": 270,
          "titleFontSize": 15,
          "labelFontSize": 13
        }
    },
    "y": {
        "field": "Participation rate by age",
        "type": "quantitative",
        "title": "Participation rate (%)",
        "scale": {
          "domain": [0, 100]
        },
        "axis": {
          "titleFontSize": 15,
          "labelFontSize": 13
        }
    },
    "color": {
      "field": "Age Group",
      "type": "nominal",
      "title": "Age Group",
      "scale": {
      "range": ["#ffffcc", "#c7e9b4", "#7fcdbb", "#41b6c4", "#1d91c0", "#225ea8", "#0c2c84"]
      },
      "legend": {
        "titleFontSize": 12,
        "labelFontSize": 12,
        "title": "Age Group"
      }
    },
    "tooltip": [
        { "field": "Age Group", "title": "Age Group" },
        { "field": "Participation rate by age", "title": "Participation Rate (%)" }
    ]
  }
}